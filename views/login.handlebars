<div class="row">
  <div class="col-md-6">
    <h2>Login with your Username and Password</h2>
<div class="column is-4 is-offset-4">
  <h3 class="title has-text-black">Login</h3>
  <div class="box">
    <form>
      <p>Username</p>
      <div class="content">
        <div class="username" id="username">
          <input class="input is-large" id="user-name" type="text" placeholder="Username">
          </div>
          </div>
          <p>Password</p>
          <div class="content">
            <div class="password" id="password">
                <input class="input is-large" id="password" type="password" placeholder="Password">
              </div>
                </div>
                <button class="button is-block is-info is-large is-fullwidth" id="login-btn">Login<i class="fa fa-sign-in" aria-hidden="true"></i></button>
              </form>
    </div>

<script src="./js/login.js"></script>
